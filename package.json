{
  "name": "basex",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "run:parse": "node ./dist/basex.js parse --vars --arrays --strings --lines --code --disasm ./examples/test_dim.bas",
    "run:run": "node ./dist/basex.js run --disasm --vars --arrays --strings ./examples/test_strings.bas",
    "build": "tsc --noEmit && esbuild src/main.ts --bundle --platform=node --outfile=./dist/basex.js --sourcemap --legal-comments=none --target=node18 --external:terminal-kit",
    "format": "rome format .",
    "lint": "rome check .",
    "format:fix": "rome format --write .",
    "lint:fix": "rome check --apply-suggested .",
    "parse": "node ./dist/basex.js parse --all "
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/terminal-kit": "^2.5.1",
    "@types/yargs": "^17.0.20",
    "esbuild": "^0.17.5",
    "rome": "^11.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "terminal-kit": "^3.0.0",
    "yargs": "^17.6.2"
  }
}
