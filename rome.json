{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
	  "nursery": {
		"recommended": true,
		"useConst": "error"
	  }
    },
	"ignore": [
		"./node_modules/**/*.*",
		"./dist/**/*.*"
	]
  },
  "formatter": {
	"lineWidth": 180,
	"ignore": [
		"./node_modules/**/*.*",
		"./dist/**/*.*"
	]
  }
}
